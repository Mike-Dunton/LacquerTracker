<% include layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    <section>
        <a href="/forums/">&#8592; Back to Forums</a><br><br>
        <center><h3>
            <% if (forumcat === "intro") { %>
                Introductions</h3><br>New to Lacquer Tracker? Tell us about yourself!<%}%>
            <% if (forumcat === "general") { %>
                General Polish Dicussion</h3><br>Any discussion related to polish is welcome here.<%}%>
            <% if (forumcat === "notd") { %>
                Nails of the Day</h3><br>Post a photo of what you're wearing today. Be sure to include the colors you used!<%}%>
            <% if (forumcat === "contests") { %>
                Contests and Giveaways</h3><br>Host a contest or giveaway.<%}%>
            <% if (forumcat === "tutorials") { %>
                Tutorials</h3><br>Post nail art tutorials or link to great ones you've found elsewhere.<%}%>
            <% if (forumcat === "offtopic") { %>
                Off Topic Discussion</h3><br>Anything goes here!<%}%><br><br><a href="/forums/<%= forumcat %>/add">Add a post</a><br><br><br><br>
        <table class="forumtable">
            <tr><th>Title</th><th>Creator</th><th>Comments</th><th>Updated</th></tr>
            <% for (i=0; i<forumposts.length; i++) { %>
                <tr><td><a href="/forums/<%= forumcat %>/<%= forumposts[i].id %>"><%= forumposts[i].title %></a></td>
                <td><a href='/profile/<%= forumposts[i].user.username %>'><%= forumposts[i].user.username %></a></td>
                <td><% if (forumposts[i].comments.length = 1) {%><%= forumposts[i].comments.length %> Reply<%} else {%><%= forumposts[i].comments.length %> Replies<%}%></td>
                <td><%= forumposts[i].dateupdated %></td></tr>
            <% } %>
        </table>
        </center>
    </section>
    </div>
</div>

<% include layoutBottom %>