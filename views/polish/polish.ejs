<% include ../layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
        <section>
            <div>
                <h2><%= pbrand %> - <%= pname %></h2><br><br>
            </div>
            <div id="biglayout">
                <div id="polish-wrap">
                    <div id="polish-left_col">
