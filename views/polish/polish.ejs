                        <% if (pswatch.length > 0) {%>
                            <img class="polishswatch" src="<%=pswatch%>"/><br><br>
                        <%}%>
                        <br>
                        <b>Code:</b> <%= pcode %><br><br>
                        <b>Collection:</b> <%= pbatch %><br><br>
                        <b>Color:</b> <%= pcolorcat %><br><br>
                        <b>Type:</b>
                            <%= ptype.replace(/,/g,", ") %>
                        <br><br><b>Indie:</b> <%if (pindie === "on") {%>yes<%}else if (pindie === "off") {%>no<%}%>
                        <br><br><br><br>
                        <a target="_blank" href="http://www.amazon.com/gp/search?ie=UTF8&camp=1789&creative=9325&index=aps&keywords=<%= linkbrand %>%20<%= linkname %>&linkCode=ur2&tag=lacqutrack-20">View on Amazon</a><img src="http://ir-na.amazon-adsystem.com/e/ir?t=lacqutrack-20&l=ur2&o=1" width="1" height="1" border="0" alt="" style="border:none !important; margin:0px !important;" />
                    </div>
                    <div id="polish-right_col">
                        <div class="slideshow">
                            <div class="slideButtons">
                                <span>(<%= numphotos %>)</span>&nbsp;&nbsp;
                                <span><a href="/photo/add/<%= pid %>">Add</a></span>
                                <% if (numphotos > 0) { %>
                                    &nbsp;&nbsp;|&nbsp;&nbsp;<span><a href="/photo/edit/<%= pid %>">Edit</a></span>
                                <% } %>
