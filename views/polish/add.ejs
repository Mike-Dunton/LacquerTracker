<% include ../layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    	<section>
            <div id="smalllayout">
                <% if (typeof message !== "undefined") { %>
                    <center><h3><%= message %></h3><br><br></center>
                <% } %>
            </div>
            <div>
        		<form action="/polishadd" method="post">
    	     		<h3>Add a new polish:</h3><br><br>
        			Name: <input type="text" name="name" class="width45" required><br><br><br>
        			Brand: <input type="text" name="brand" class="width44" required><br><br><br>
                    Collection: <input type="text" name="batch" class="width40"><br><i>Please format like: 2013 Off Shore (Summer)</i><br><br><br>
                    Code: <input type="text" name="code" class="width45"><br><br><br>
                    Color: <select name="colorcat">
                        <option value="">select a color category</option>
                        <option value="black">black</option>
                        <option value="blue">blue</option>
                        <option value="brown">brown</option>
                        <option value="clear">clear</option>
                        <option value="gold">gold</option>
                        <option value="green">green</option>
                        <option value="grey">grey</option>
                        <option value="nude">nude</option>
                        <option value="orange">orange</option>
                        <option value="pink">pink</option>
                        <option value="purple">purple</option>
                        <option value="red">red</option>
                        <option value="silver">silver</option>
                        <option value="white">white</option>
                        <option value="yellow">yellow</option>
                        </select> and
                        <input class="color" value="F2F7F7" name="colorhex"><br><br><br>
                    Types:<br><ul>
                    <input type="checkbox" name="type" value="crackle">crackle<br>
                    <input type="checkbox" name="type" value="creme">creme<br>
                    <input type="checkbox" name="type" value="flakie">flakie<br>
                    <input type="checkbox" name="type" value="glitter">glitter<br>
                    <input type="checkbox" name="type" value="glow">glow<br>
                    <input type="checkbox" name="type" value="holo">holo<br>
                    <input type="checkbox" name="type" value="jelly">jelly<br>
                    <input type="checkbox" name="type" value="magnetic">magnetic<br>
                    <input type="checkbox" name="type" value="matte">matte<br>
                    <input type="checkbox" name="type" value="metallic">metallic<br>
                    <input type="checkbox" name="type" value="neon">neon<br>
                    <input type="checkbox" name="type" value="sheer">sheer<br>
                    <input type="checkbox" name="type" value="shimmer">shimmer<br>
                    <input type="checkbox" name="type" value="striper">striper<br>
                    <input type="checkbox" name="type" value="texture">texture<br>
                    <input type="checkbox" name="type" value="thermal">thermal<br>
                    <input type="checkbox" name="type" value="top/base">top/base</ul>
                    <br><br><br>
                    Is this an indie?: <select name="indie">
                        <option value="off">no</option>
                        <option value="on">yes</option>
                        </select><br><br><br>
                    Dupes:<br><textarea name="dupes" class="width45" rows="10"></textarea><br><br><br><br>
                    <input type="submit" value="Submit" class="button">
        		</form>
            </div>
            <div id="biglayout">
                <% if (typeof message !== "undefined") { %>
                    <br><br><b><%= message %></b>
                <% } %>
            </div>
        </section>
    </div>
</div>

<% include ../layoutBottom %>