<% include ../layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
        <section>
            <div id="smalllayout">
                <% if (typeof message !== "undefined") { %>
                    <center><h3><%= message %></h3><br><br></center>
                <% } %>
            </div>
            <div>
                <form method="post" action="/passwordreset">
                    <h3>Reset Password</h3><br><br>
                    Please enter your username. An e-mail will be sent to the address associated with your account:<br><br>
                    <input type="text" name="username" class="width45"><br><br>
                    <input type="submit" value="Submit" class="button" id="login-button">
                </form>
            </div>
            <div id="biglayout">
                <% if (typeof message !== "undefined") { %>
                    <br><b><%= message %></b>
                <% } %>
            </div>
    </section>
    </div>
</div>

<% include ../layoutBottom %>