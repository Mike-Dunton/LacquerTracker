<% include layoutTop %>

<script type="text/javascript">
function confirm_alert(node) {
    return confirm("Are you sure you want to permanently delete this?");
}
</script>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    <section>
        <div class="forumpost">
        <h2><%= posttitle %></h2><br>
            <i>Posted by <a href="/profile/<%= postuser.username%>"><%= postuser.username %></a> on <%= postdate %></i><br><br><br>
            <p style="white-space: pre;"><%- postmessage %></p><br><br><hr><br><br>
            <b>Comments (<%= postcomments.length %>)</b> | <a href="/blog/<%= posttitle %>/add">Add a comment</a><br><br>
            <% for (i=0; i<postcomments.length; i++) { %>
                <br><br>
                <% if (postcomments[i].user.profilephoto) { %>
                    <img class="profilephotocomment" src="<%= postcomments[i].user.profilephoto %>">&nbsp;
                <% } %>
                <b><a href="/profile/<%= postcomments[i].user.username %>"><% if (postuser.username === postcomments[i].user.username) {%>*<%}%><%= postcomments[i].user.username %><% if (postuser.username === postcomments[i].user.username) {%>*<%}%></a></b>&nbsp;&nbsp;<font color="#6E6B69"><%= postcomments[i].date %>:</font>
                <% if (isAuthenticated()) { %>
                    <% if (user.username === postcomments[i].user.username) { %>
                        <a href="/blog/<%= posttitle %>/<%= postcomments[i].id %>/remove" onclick="return confirm_alert(this);">Delete this comment</a>
                    <% } %>
                <% } %>
                <br>
                <p style="white-space: pre; padding-left: 3em"><%- postcomments[i].message %></p>
                <a href="#">Reply</a><br><br><br>
            <% } %>
            <hr><br><br>
            <% if (isAuthenticated()) { %>
               <b><a name="addcomment"><font color="#000000">Add a Comment:</font></b><br><br>
                <a href="/photo/upload">Upload a photo?</a><br><br>
                <form action="/blog/<%= posttitle %>/add" method="post">
                    <textarea class="markItUp" name="message" cols="100" rows="10" required></textarea><br><br>
                    <input type="submit" value="Submit" class="button">
                </form>
            <% } %>
            </div>
    </section>
    </div>
</div>

<% include layoutBottom %>