<% include layoutTop %>

<!-- content -->
<div class="wrapper row2">
    <div id="container" class="clear">
    <section>
    <div id="biglayout">
        <form action="/reset/<%= username %>" method="post">
            <h3>Enter a new password below:</h3><br>
            Username: <input type="text" name="username" value="<%= username %>" disabled><br><br>
            Password: <input type="password" name="password"><br><br>
            Confirm password: <input type="password" name="confirm"><br><br><br>
            <input type="submit" value="Submit" class="button" id="login-button">
        </form>
        <% if (typeof message !== "undefined") { %>
            <br><br><b><%= message %></b>
        <% } %>
        </div>
        <div id="smalllayout">
        <% if (typeof message !== "undefined") { %>
            <center><h3><%= message %></h3><br><br></center>
        <% } %>
        <form action="/reset/<%= username %>" method="post">
            <h3>Enter a new password below:</h3><br>
            Username: <input type="text" name="username" value="<%= username %>" class="fullwidth" disabled><br><br>
            Password: <input type="password" name="password" class="fullwidth"><br><br>
            Confirm password: <input type="password" name="confirm" class="fullwidth"><br><br><br>
            <input type="submit" value="Submit" class="button" id="login-button">
        </form>
        </div>
    </section>
    </div>
</div>

<% include layoutBottom %>